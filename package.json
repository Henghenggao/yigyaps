{
  "name": "yigyaps",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "YigYaps â€” The open marketplace for YAP skills",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:db": "npm run test --workspace=@yigyaps/db",
    "test:api": "npm run test --workspace=@yigyaps/api",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dev:api": "npm run dev --workspace=@yigyaps/api",
    "db:generate": "npm run db:generate --workspace=@yigyaps/db",
    "db:migrate": "node scripts/migrate.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.0"
  }
}
