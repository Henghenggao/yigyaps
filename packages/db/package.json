{
  "name": "@yigyaps/db",
  "version": "0.1.0",
  "description": "YigYaps database schema and DALs (Drizzle ORM + PostgreSQL)",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@yigyaps/types": "*",
    "drizzle-orm": "^0.38.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.12.0",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.31.9",
    "pg": "^8.13.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.38.0"
  }
}
